:-op(15,xfx,=>).
:-op(15,xfx,extend).
:-op(15,xfx,getClassProperty).
class([name=>"Object",parent=>"Object",attributes=>[]]).
class([name=>"Class1",parent=>"Object",attributes=>[attr1=>value1]]).
class([name=>"Class2",parent=>"Object",attributes=>[attr1=>value1,attr2=>value2]]).
class([name=>"Class3",parent=>"Class2",attributes=>[attr3=>value4]]).
%[class(name=>"Object",parent=>"Object",attributes=>[]),class(name=>"Class1",parent=>"Object",attributes=>[attr1=>value1]),class(name=>"Class3",parent=>"Class2",attributes=>[attr3=>value4])].

%searchValue(name,[name=>class1,parent=>object,attributes=>[attr1=>value1]], Value).
=>(Property,Value).
=>(Property,[H|T]).
searchValue(Property,[],Value):-!.
searchValue(Property,[],[H|T]):-!.
searchValue(Property,[H|T],Value):-
	%write(Property),nl,=>(Property,Value) = H,!;searchValue(Property,[T],Value).	
	write(Property),nl,=>(Property,Value) = H,!;searchValue(Property,[T],Value).
findProperty(Class,Property,Value):-
	Class = getClassProperty(L), searchValue(Property,L,Value).
